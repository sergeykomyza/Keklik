mixin breadcrumbs(items)
	nav.breadcrumbs
		.container
			ul.breadcrumbs__list
				li.breadcrumbs__item.breadcrumbs__link--home
					a(href="#" title="Главная").breadcrumbs__link
						<svg class="breadcrumbs__home" width="18" height="19" viewBox="0 0 18 19" fill="none" xmlns="http://www.w3.org/2000/svg"><path d="M6.75 13.25h4.5m1.5 3h-7.5a3 3 0 0 1-3-3V8.531a3 3 0 0 1 1.445-2.565l3.75-2.273a3 3 0 0 1 3.11 0l3.75 2.273A3 3 0 0 1 15.75 8.53v4.72a3 3 0 0 1-3 3Z" stroke="currentColor" stroke-width="1.2" stroke-linecap="round" stroke-linejoin="round"/></svg>
				each item in items
					li.breadcrumbs__item
						if item.url
							a.breadcrumbs__link(href=item.url) !{item.title}
						else
							span.breadcrumbs__title !{item.title}
	