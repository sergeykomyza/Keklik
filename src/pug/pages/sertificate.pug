html(lang="ru")
	head
		include ./../sections/_head.pug
		title Keklik | Сертификат
	body

		include ./../sections/_header.pug

		+breadcrumbs([
			{ title: 'Сертификат' }
		])

		.product.sertificate 
			.container
				.product__mobiletitlebox 

			.full-container
				.product__box 
					.sliderbox
