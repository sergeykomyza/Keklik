											img.product__foto(src='img/sertificate-' + elem + '.webp', alt="foto")
						.slider-nav.product-nav.js-previewProductNav
					aside.product__info 
						.product__infobox.js-scrollSticky
							.product__titlebox
								h1.product__title Комплект из Раухтопаза
								.preview-tags.product-tags
									span.preview-tags__item.product-tags__item--sale.text Скидка 50%
							.product__pricebox 
								span.product__price 9 000 #[span.product__price--symbol.text ₽]
								button.product-payinstall
