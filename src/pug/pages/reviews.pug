mixin galleryPageProduct(src, title)
	.swiper-slide
		.preview.preview-big
			.preview__fotobox
				img.preview-big__foto(src=""+src, alt="Фотография товара")
				.preview-tags
					span.preview-tags__item.text Бессрочная акця
			h6.preview__name.text #{title}



<!DOCTYPE html>
html(lang="ru")
	head
		include ./../sections/_head.pug
		title Отзывы о нас

	body
		include ./../sections/_header.pug
		+breadcrumbs([
			{ title: 'Отзывы о нас', url: '' }
		])

		main.reviews
			.container
				.reviews-top
					.reviews-top__box
						h1.page-title Отзывы о нас
						p Мы рады быть вам по настоящему полезным
					a.button.button-black.reviews-top__btn(href="#reviews__form") Оставить отзыв

				.reviews__video-slider
					h2.page-title Смотреть
					include ./../sections/_video-slider.pug

			.reviews-cards
				.container
					.reviews__text-slider
						h2.page-title Читать
						include ./../sections/_reviews-slider.pug

			.form.reviews__form#reviews__form
				.container.reviews__form-container
					h2.page-title Оставить свой отзыв
					.reviews__form-box
						.reviews_form__left
							input.form__input(name="fio" type="text" placeholder="Ваше имя *")
							textarea.form__input.form__input--comment(name="comment" placeholder="Ваш отзыв") 
						.reviews_form__right
							label.form__file-label
								span.form__file-text Прикрепите фото изделия или небольшое видео
								span.form__file-btn 
									<svg width="18" height="19" viewBox="0 0 18 19" fill="none" xmlns="http://www.w3.org/2000/svg"><path d="M8.25 12.842V6.729L6.3 8.68 5.25 7.592 9 3.842l3.75 3.75-1.05 1.087-1.95-1.95v6.113h-1.5Zm-3.75 3c-.412 0-.765-.147-1.059-.44A1.447 1.447 0 0 1 3 14.341v-2.25h1.5v2.25h9v-2.25H15v2.25c0 .412-.147.765-.44 1.06a1.44 1.44 0 0 1-1.06.44h-9Z" fill="#222"/></svg>
									.form__file-btn-text .jpg, .mp4
								input(type="file", name="file").file-input


							input.form__input.form__input--phone.js-phone(name="phone" type="text")
							button.button.button-black 
								span.text Отправить

							include ./../layouts/_agree.pug

		include ./../sections/_footer.pug

		include ./../sections/_scripts.pug
